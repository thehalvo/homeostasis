{
  "version": "1.0.0",
  "description": "Common MATLAB error patterns and fixes",
  "rules": [
    {
      "id": "matlab_undefined_variable",
      "category": "runtime",
      "type": "variable_access",
      "pattern": "Undefined.*variable.*'.*'",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "matlab_undefined_error",
      "suggestion": "Check variable name and ensure it's defined before use",
      "tags": ["matlab", "variable", "undefined", "runtime"],
      "description": "Variable not defined or not in workspace"
    },
    {
      "id": "matlab_undefined_function",
      "category": "runtime",
      "type": "function_call",
      "pattern": "Undefined.*function.*'.*'",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "matlab_undefined_error",
      "suggestion": "Check function name and MATLAB path",
      "tags": ["matlab", "function", "undefined", "path"],
      "description": "Function not found or not on MATLAB path"
    },
    {
      "id": "matlab_matrix_dimensions",
      "category": "matrix",
      "type": "dimension_error",
      "pattern": "Matrix dimensions.*not agree",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "matlab_matrix_error",
      "suggestion": "Check matrix dimensions before operations",
      "tags": ["matlab", "matrix", "dimension", "multiplication"],
      "description": "Matrix dimensions incompatible for operation"
    },
    {
      "id": "matlab_index_bounds",
      "category": "indexing",
      "type": "bounds_error",
      "pattern": "Index exceeds.*bounds",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "matlab_index_error",
      "suggestion": "Check array indices and bounds",
      "tags": ["matlab", "index", "bounds", "array"],
      "description": "Array index out of bounds"
    },
    {
      "id": "matlab_singular_matrix",
      "category": "matrix",
      "type": "singular_matrix",
      "pattern": "Matrix.*singular",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "matlab_matrix_error",
      "suggestion": "Use pseudoinverse or check matrix conditioning",
      "tags": ["matlab", "matrix", "singular", "inversion"],
      "description": "Matrix is singular and cannot be inverted"
    },
    {
      "id": "matlab_not_enough_args",
      "category": "function",
      "type": "argument_error",
      "pattern": "Not enough input arguments",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "matlab_function_error",
      "suggestion": "Provide all required function arguments",
      "tags": ["matlab", "function", "argument", "input"],
      "description": "Function called with insufficient arguments"
    },
    {
      "id": "matlab_too_many_args",
      "category": "function",
      "type": "argument_error",
      "pattern": "Too many input arguments",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "matlab_function_error",
      "suggestion": "Remove extra arguments or check function signature",
      "tags": ["matlab", "function", "argument", "input"],
      "description": "Function called with too many arguments"
    },
    {
      "id": "matlab_out_of_memory",
      "category": "memory",
      "type": "memory_error",
      "pattern": "Out of memory",
      "severity": "critical",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "matlab_memory_error",
      "suggestion": "Reduce array sizes or optimize memory usage",
      "tags": ["matlab", "memory", "allocation", "performance"],
      "description": "Memory allocation failed"
    },
    {
      "id": "matlab_file_not_found",
      "category": "file",
      "type": "file_error",
      "pattern": "File.*not found",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "matlab_file_error",
      "suggestion": "Check file path and existence",
      "tags": ["matlab", "file", "path", "io"],
      "description": "File not found at specified path"
    },
    {
      "id": "matlab_array_indices_positive",
      "category": "indexing",
      "type": "index_error",
      "pattern": "Array indices.*positive integers",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "matlab_index_error",
      "suggestion": "Use positive integers for array indexing",
      "tags": ["matlab", "index", "positive", "integer"],
      "description": "Array indices must be positive integers"
    }
  ]
}