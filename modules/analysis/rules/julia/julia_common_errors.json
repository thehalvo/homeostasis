{
  "name": "julia_common_errors",
  "version": "1.0.0",
  "description": "Common Julia error patterns and fixes",
  "rules": [
    {
      "id": "julia_macro_undefined",
      "category": "julia",
      "type": "macro",
      "pattern": "LoadError: UndefVarError: @\\w+ not defined",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_macro_error",
      "suggestion": "Check macro name and ensure the required package is imported",
      "tags": ["julia", "macro", "metaprogramming", "undefined"],
      "description": "Macro not defined or not imported"
    },
    {
      "id": "julia_undef_var",
      "category": "julia",
      "type": "undefined",
      "pattern": "UndefVarError: `.*` not defined",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_undefined_error",
      "suggestion": "Check variable name and ensure it's defined before use",
      "tags": ["julia", "variable", "undefined", "runtime"],
      "description": "Variable not defined or not in scope"
    },
    {
      "id": "julia_method_error",
      "category": "julia",
      "type": "type",
      "pattern": "MethodError: no method matching",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_method_error",
      "suggestion": "Check method signatures and argument types",
      "tags": ["julia", "method", "dispatch", "type"],
      "description": "No method matching the given arguments"
    },
    {
      "id": "julia_bounds_error",
      "category": "julia",
      "type": "bounds",
      "pattern": "BoundsError: attempt to access",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_bounds_error",
      "suggestion": "Check array bounds before accessing elements",
      "tags": ["julia", "bounds", "array", "index"],
      "description": "Array index out of bounds"
    },
    {
      "id": "julia_type_error",
      "category": "julia",
      "type": "type_conversion",
      "pattern": "TypeError: cannot convert",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_type_error",
      "suggestion": "Use appropriate type conversion functions",
      "tags": ["julia", "type", "conversion", "cast"],
      "description": "Type conversion failed"
    },
    {
      "id": "julia_inexact_error",
      "category": "julia",
      "type": "inexact_conversion",
      "pattern": "InexactError: cannot convert",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_type_error",
      "suggestion": "Check precision and use appropriate conversion",
      "tags": ["julia", "type", "precision", "conversion"],
      "description": "Inexact type conversion"
    },
    {
      "id": "julia_argument_error",
      "category": "julia",
      "type": "argument_error",
      "pattern": "ArgumentError: invalid.*argument",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_runtime_error",
      "suggestion": "Check argument values and constraints",
      "tags": ["julia", "argument", "validation", "runtime"],
      "description": "Invalid argument provided to function"
    },
    {
      "id": "julia_dimension_mismatch",
      "category": "array",
      "type": "dimension_error",
      "pattern": "DimensionMismatch: dimensions must match",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_bounds_error",
      "suggestion": "Check array dimensions before operations",
      "tags": ["julia", "dimension", "array", "matrix"],
      "description": "Array dimensions do not match for operation"
    },
    {
      "id": "julia_syntax_error",
      "category": "syntax",
      "type": "parse_error",
      "pattern": "syntax:.*unexpected.*token",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_syntax_error",
      "suggestion": "Check syntax near the reported location",
      "tags": ["julia", "syntax", "parsing", "token"],
      "description": "Syntax error in Julia code"
    },
    {
      "id": "julia_stack_overflow",
      "category": "julia",
      "type": "stack_overflow",
      "pattern": "StackOverflowError: stack overflow",
      "severity": "critical",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_runtime_error",
      "suggestion": "Check for infinite recursion or deep call stack",
      "tags": ["julia", "stack", "recursion", "overflow"],
      "description": "Stack overflow due to deep recursion"
    },
    {
      "id": "julia_out_of_memory",
      "category": "memory",
      "type": "memory_error",
      "pattern": "OutOfMemoryError: out.*memory",
      "severity": "critical",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_memory_error",
      "suggestion": "Reduce memory usage or optimize allocation",
      "tags": ["julia", "memory", "allocation", "performance"],
      "description": "Memory allocation failed"
    },
    {
      "id": "julia_package_not_found",
      "category": "julia",
      "type": "import",
      "pattern": "ArgumentError: Package.*not found",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "julia_import_error",
      "suggestion": "Check package name and ensure it's installed using Pkg.add()",
      "tags": ["julia", "package", "import", "dependency"],
      "description": "Package not found in environment"
    }
  ]
}