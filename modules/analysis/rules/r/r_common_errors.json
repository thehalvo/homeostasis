{
  "version": "1.0.0",
  "description": "Common R error patterns and fixes",
  "rules": [
    {
      "id": "r_object_not_found",
      "category": "runtime",
      "type": "object_access",
      "pattern": "object '.*' not found",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "r_object_not_found",
      "suggestion": "Check object name and ensure it's defined",
      "tags": ["r", "object", "variable", "runtime"],
      "description": "Object or variable not found in workspace"
    },
    {
      "id": "r_function_not_found",
      "category": "runtime",
      "type": "function_call",
      "pattern": "could not find function",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "r_function_error",
      "suggestion": "Load required package or check function name",
      "tags": ["r", "function", "package", "runtime"],
      "description": "Function not found, may need to load package"
    },
    {
      "id": "r_subscript_bounds",
      "category": "runtime",
      "type": "indexing",
      "pattern": "subscript out of bounds",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "r_bounds_error",
      "suggestion": "Check vector/matrix indices and dimensions",
      "tags": ["r", "bounds", "index", "vector"],
      "description": "Array or vector index out of bounds"
    },
    {
      "id": "r_package_not_found",
      "category": "package",
      "type": "package_loading",
      "pattern": "there is no package called",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "r_package_error",
      "suggestion": "Install missing package with install.packages()",
      "tags": ["r", "package", "install", "library"],
      "description": "Package not installed or not found"
    },
    {
      "id": "r_unused_argument",
      "category": "function",
      "type": "argument_error",
      "pattern": "unused argument",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "r_function_error",
      "suggestion": "Remove unused arguments or check function signature",
      "tags": ["r", "function", "argument", "parameter"],
      "description": "Function called with unused or incorrect arguments"
    },
    {
      "id": "r_syntax_unexpected",
      "category": "syntax",
      "type": "syntax_error",
      "pattern": "unexpected.*in",
      "severity": "high",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "r_syntax_error",
      "suggestion": "Check syntax near the reported location",
      "tags": ["r", "syntax", "parsing"],
      "description": "Unexpected symbol or syntax error"
    },
    {
      "id": "r_data_lengths_differ",
      "category": "data",
      "type": "data_manipulation",
      "pattern": "data lengths differ",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "r_data_error",
      "suggestion": "Check vector lengths and data frame dimensions",
      "tags": ["r", "data", "vector", "length"],
      "description": "Vector lengths differ in data operation"
    },
    {
      "id": "r_missing_values",
      "category": "data",
      "type": "missing_data",
      "pattern": "missing values.*object",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "r_data_error",
      "suggestion": "Handle missing values with na.omit() or na.rm",
      "tags": ["r", "data", "missing", "na"],
      "description": "Missing values preventing operation"
    },
    {
      "id": "r_non_numeric_argument",
      "category": "type",
      "type": "type_error",
      "pattern": "non-numeric argument",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "r_type_error",
      "suggestion": "Convert to numeric with as.numeric() or check data types",
      "tags": ["r", "type", "numeric", "conversion"],
      "description": "Non-numeric argument where numeric expected"
    },
    {
      "id": "r_undefined_columns",
      "category": "data",
      "type": "column_access",
      "pattern": "undefined columns selected",
      "severity": "medium",
      "confidence": "high",
      "reliability": "high",
      "root_cause": "r_dataframe_error",
      "suggestion": "Check column names and data frame structure",
      "tags": ["r", "dataframe", "column", "selection"],
      "description": "Trying to select undefined columns from data frame"
    }
  ]
}